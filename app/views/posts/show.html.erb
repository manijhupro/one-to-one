<div class="background-image-overlay"></div>

<div id="outer-background-container" data-default-background-img="<%= image_path('bg5.jpg')%>" style="background-image:image-url('bg5.jpg');"></div>


<p id="notice"><%= notice %></p>
<div class="col-sm-7 col-md-5.5">
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<% if current_user.present? %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
    <%= link_to 'Back', posts_path %>


<!--Putting comments into your HTML view-->

<h2>Comments</h2>
<div id="comments">
    <%= render :partial => @post.comments %>
</div>
</div>
<!--the form for submitting a comment-->

<%= form_for [@post, Comment.new] do |f| %>
<%= render 'shared/error_messages' %><div class="col-sm-7 col-md-3">
    <p>
        <%= f.label :email, "Email:" %>
        <%= f.text_field 'email', type:'email', class:'text-field form-control validate-field required', id:'form-email', data:{:'validation-type'=>'email'}, placeholder:'Email Address'%>

        <!--%= f.text_field :email %>-->
        <br/>
        <%= f.label :body, "New comment" %><br/>
        <%= f.text_area :body, :cols => "25", :rows => "7" %>
    </p>
    <p><%= f.submit "Add comment" %></p></div>
<% end %>